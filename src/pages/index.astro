---
import Layout from "@layouts/Layout.astro";
import Container from "@components/Container.astro";
import { SITE, HOME } from "@consts";
import ArrowCard from "@components/ArrowCard.astro";
import Link from "@components/Link.astro";
import { getCollection } from "astro:content";
import { Image } from 'astro:assets';
import me from '@assets/img/me.png';
import SocialLinks from "@components/SocialLinks.astro";
import "bootstrap-icons/font/bootstrap-icons.css";

const wdilwms = (await getCollection("wdilwms"))
  .filter((post) => !post.data.isDraft)
  .sort((a, b) => b.data.publishedAt.valueOf() - a.data.publishedAt.valueOf())
  .slice(0, SITE.NUM_POSTS_ON_HOMEPAGE);

const projects = (await getCollection("projects"))
  .filter((post) => !post.data.isDraft)
  .sort((a, b) => b.data.publishedAt.valueOf() - a.data.publishedAt.valueOf())
  .slice(0, SITE.NUM_POSTS_ON_HOMEPAGE);
---

<Layout title={HOME.TITLE} description={HOME.DESCRIPTION}>
  <Container>
    <h1 class="animate font-semibold text-black dark:text-white">
      Hi, I'm Irfan ðŸ‘‹
    </h1>
    <div class="space-y-16">
      <section>
        <article class="grid grid-cols-1 sm:grid-cols-2">
          <span class="animate">
            <p>
              Hello, I'm Irfan Alamsyah a.k.a <strong>Ipan</strong>. I'm a computer science third-year student in IPB University with a strong focus on <strong>backend development</strong> with proficiency in languages such as <strong>Python</strong> and <strong>Javascript</strong> and experiences in frameworks such as <strong>Django</strong> and <strong>Express.js</strong>. I'm also interested in <strong>Cloud Computing</strong> and <strong>DevOps</strong> with experiences in <strong>Google Cloud Platform</strong> and <strong>Docker</strong>.
            </p>
          </span>
          <div class="justify-self-center self-center">
            <Image src={me} alt="A description of my image." class={"rounded-full border-2 border-blue-500 h-48 w-auto object-cover"} />
          </div>
          <div class="col-span-2">
            <p class="m-0">With little to many experiences in:</p>
            <p class="m-0">
              Programming languages: C, C++, C#, JavaScript, TypeScript, Python, Java, PHP, Go
            </p>
            <p class="m-0">
              Frameworks: Django, Express, ASP.NET, Next.js, Astro, Laravel
            </p>
            <p class="m-0">
              Databases: MySQL, PostgreSQL, MongoDB, Firebase, SQL Server
            </p>
            <p class="m-0">
              Others: Git, Docker, Linux
            </p>
          </div>
        </article>
      </section>

      <section class="animate space-y-6">
        <div class="flex flex-wrap items-center justify-between gap-y-2">
          <h2 class="font-semibold text-black dark:text-white">Latest WDILWMs - What Did I Learn While Making</h2>
          <Link href="/wdilwms">See all wdilwms</Link>
        </div>
        <ul class="not-prose gap-4 grid grid-cols-1 sm:grid-cols-2">
          {
            wdilwms.map((wdilwm) => (
              <li>
                <ArrowCard entry={wdilwm} />
              </li>
            ))
          }
        </ul>
      </section>
      
      <section class="animate space-y-6">
        <div class="flex flex-wrap items-center justify-between gap-y-2">
          <h2 class="font-semibold text-black dark:text-white">Latest projects</h2>
          <Link href="/projects">See all projects</Link>
        </div>
        <ul class="not-prose gap-4 grid grid-cols-1 sm:grid-cols-2">
          {
            projects.map((project) => (
              <li>
                <ArrowCard entry={project} />
              </li>
            ))
          }
        </ul>
      </section>

      <section class="animate space-y-4">
        <h2 class="font-semibold text-black dark:text-white">Get in touch</h2>
        <article>
          <p>
            Email me at <Link
            href={`mailto:${SITE.EMAIL}`}
          >{SITE.EMAIL}</Link> or follow me via my social links.
          </p>
        </article>
        <SocialLinks />
      </section>
    </div>
  </Container>
</Layout>
